generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String    // Store password hashed
  snippets  snippet[] // A user can have many snippets
}

model snippet {
  id        String   @id @default(uuid())
  title     String
  code      String
  authorId  String   // Foreign key for the user
  author    user     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // Automatically updated on modification
}
